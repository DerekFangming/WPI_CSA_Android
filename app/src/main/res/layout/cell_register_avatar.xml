<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/ripple_background">

    <ImageView
        android:id="@+id/registerAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add_avatar"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/register_avatar_desc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/registerAvatar"
        android:textAlignment="center"
        android:text="@string/register_greeting_msg"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/settingLinkBotLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>

</RelativeLayout>