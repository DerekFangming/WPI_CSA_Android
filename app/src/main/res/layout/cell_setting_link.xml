<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ripple_background"
    >

    <ImageView
        android:id="@+id/settingLinkIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/setting_link_icon_desc"/>

    <TextView
        android:id="@+id/settingLinkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/settingLinkIcon"
        android:layout_toStartOf="@id/settingLinkArrow"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/settingLinkArrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/setting_forward_icon_desc"
        android:src="@drawable/forward_arrow_colored"/>


    <View
        android:id="@+id/settingLinkBotLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:background="@color/gray"/>

</RelativeLayout>